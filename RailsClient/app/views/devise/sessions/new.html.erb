<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <p><span class="alert error"><%= alert %></span></p>

    <div class="form-group">
      <%= f.label :nr, '员工号', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :nr, autofocus: true, class: 'form-control' %>
      </div>
    </div>

    <div class="field">
      <%= f.label :密码 %><br/>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
              <label>
                <%= f.check_box :remember_me %> 记住我
              </label>
            </div>
          </div>
        </div>
    <% end %>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit value: '登 录', class: 'btn btn-success btn-lg' %>
      </div>
    </div>
<% end %>

<%= render "devise/shared/links" %>
