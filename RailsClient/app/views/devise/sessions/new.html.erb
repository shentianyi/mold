<div class="LoginBox">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h2>模具管理系统</h2>

      <p><span class="alert error"><%= alert %></span></p>

      <div class="LoginContent">
        <h4>员工号:</h4>
        <input autofocus="autofocus" type="text" style="color: #fff;" name="user[nr]" id="user_nr">
        <span id="CheckUsername"></span>
      </div>

      <div class="LoginContent">
        <h4>密　码:</h4>
        <input type="password" style="color: #fff;background-color: #424A5D;" name="user[password]" id="user_password">

        <span id="CheckPassword"></span>
      </div>


      <% if devise_mapping.rememberable? %>
          <div class="LoginContent">
            <%= f.check_box :remember_me %>
            <h5><%= f.label :记住我 %></h5>
            <button type="submit" name="commit" class="btn btn-info">登陆</button>
          </div>
      <% end %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
