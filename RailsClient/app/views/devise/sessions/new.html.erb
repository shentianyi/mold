<div id="FailLogin" class="container alert alert-info">
  <h4 id="Fail"></h4>
</div>

<div class="LoginBox">
  <h2>模具管理系统</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name),html:{name:'login_form'}) do |f| %>
  <div class="LoginContent">
    <h4><%= f.label :用户名： %></h4>
    <%= f.text_field :email, autofocus: true %>
    <span id="CheckUsername"></span>
  </div>

  <div class="LoginContent">
    <h4><%= f.label :密　码： %></h4>
    <%= f.password_field :password, autocomplete: "off" %>
    <span id="CheckPassword"></span>
  </div>

  <% if devise_mapping.rememberable? %>
      <div class="LoginContent">
        <%= f.check_box :remember_me %>
        <h5><%= f.label :记住我 %></h5>
        <input style="width: 15%;margin-left: 25%;" type="button" value="登陆" onclick="Login();">
  <% end %>
  <% end %>
  <%= render "devise/shared/links" %>
  </div>