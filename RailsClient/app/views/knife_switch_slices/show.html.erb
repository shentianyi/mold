  <div class="col-sm-6">
    <p>剖面：</p>
    <a href="mold:open?file=<%= @knife_switch_slice.image_after %>"><%= @knife_switch_slice.image_after %></a>
  </div>

  <div class="col-sm-6">
    <p>验收确认：</p>
    <%= @knife_switch_slice.is_ok %>
  </div>
  <hr/>

  <div class="col-sm-12">
    <p>剖面（换刀前）：</p>
    <a href="mold:open?file=<%= @knife_switch_slice.image_before %>"><%= @knife_switch_slice.image_before %></a>
  </div>

  <!--<div class="col-sm-12">-->
