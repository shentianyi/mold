<h1>换刀切片<em>详情</em></h1>
<hr style="border: 1px solid #000"/>

<div>
  <div class="col-sm-6">
    <p>模具号：</p>
    <%= @knife_switch_slice.mould_id %>
  </div>

  <div class="col-sm-6">
    <p>项目：</p>
    <%= @knife_switch_slice.project_id %>
  </div>
  <hr/>

  <div class="col-sm-6">
    <p>日期：</p>
    <%= @knife_switch_slice.switch_date_day_str %>
  </div>

  <div class="col-sm-6">
    <p>端子莱尼号：</p>
    <%= @knife_switch_slice.terminal_leoni_id %>
  </div>
  <hr/>

  <div class="col-sm-6">
    <p>刀片型号1：</p>
    <%= @knife_switch_slice.knife_type1 %>
  </div>

  <div class="col-sm-6">
    <p>刀片型号2：</p>
    <%= @knife_switch_slice.knife_type2 %>
  </div>
  <hr/>

  <div class="col-sm-6">
    <p>电线型号：</p>
    <%= @knife_switch_slice.wire_type %>
  </div>

  <div class="col-sm-6">
    <p>截面mm：</p>
    <%= @knife_switch_slice.wire_cross.to_i %>
  </div>
  <hr/>

  <!--<div class="col-sm-6">-->
  <!--<p>剖面：</p>-->
  <!--<img src="/images?image=<%= URI::encode(@knife_switch_slice.image_after) %>" width="50" height="40" alt=""/>-->
